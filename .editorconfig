# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = tab
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.{cpp,cc,cxx,c,hpp,hh,hxx,inl}]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.go]
indent_style = tab
indent_size = 4

[go.{sum,work}]
indent_style = tab
indent_size = 4

[*.{sh,bash,zsh,fish}]
indent_style = tab

[{Makefile,*.make,*.cmake}]
indent_style = tab
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,mkd,markdown}]
indent_size = 4
trim_trailing_whitespace = false
insert_final_newline = false
indent_style = tab

[*.json]
indent_size = 4
indent_style = space
